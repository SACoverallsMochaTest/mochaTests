{
  "compilerOptions": {
      "target": "es6",
      "experimentalDecorators" : true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "outDir": "dist",
      "baseUrl": "./src",
      "allowJs": true,
      "types": ["node", "mocha", "should"],
      "preserveConstEnums": true,
      "sourceMap": true
  },
  "include": [
      "src/**/*",
      "tests/**/*",
  ],
  "exclude": [
      "node_modules",
  ]
}